<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estsoft.gugufighter.ResultActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한판 더"
        android:id="@+id/btn_regame"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이제 그만"
        android:id="@+id/btn_exit"
        android:layout_alignTop="@+id/btn_regame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="당신의 점수는"
        android:id="@+id/textView6"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0/0"
        android:id="@+id/result"
        android:textSize="50sp"
        android:phoneNumber="true"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/yourname"
        android:layout_marginTop="54dp"
        android:text="너의 이름"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/btn_regame"
        android:layout_alignStart="@+id/btn_regame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="순위:"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_below="@+id/result"
        android:layout_toRightOf="@+id/btn_regame"
        android:layout_toEndOf="@+id/btn_regame"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0등"
        android:id="@+id/ranking"
        android:textSize="30sp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toLeftOf="@+id/btn_exit"
        android:layout_toStartOf="@+id/btn_exit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:id="@+id/submit"
        android:layout_alignBottom="@+id/yourname"
        android:layout_alignRight="@+id/btn_exit"
        android:layout_alignEnd="@+id/btn_exit" />

</RelativeLayout>
